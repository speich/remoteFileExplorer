{
  "name": "remote-file-explorer",
  "description": "Manage files and folders on a remote web server directly within your browser.",
  "homepage": "https://www.speich.net/projects/programming/remoteFileExplorer.php/demo/photos",
  "repository": "https://github.com/speich/remoteFileExplorer/",
  "version": "0.11.0",
  "dependencies": {
    "dgrid": "https://github.com/SitePen/dgrid#v0.3.21",
    "dijit": "1.17.3",
    "dojo": "1.17.3",
    "put-selector": "0.3.6",
    "xstyle": "0.3.3"
  },
  "devDependencies": {
    "esbuild": "0.27.0",
    "rimraf": "6.1.2"
  },
  "scripts": {
    "_dgrid:del": "rimraf dgrid",
    "_dgrid:copycss": "esbuild ./node_modules/dgrid/css/*.css ./node_modules/dgrid/css/**/*.css --bundle --minify --sourcemap --loader:.png=copy --outdir=./dgrid/css",
    "_dgrid:copyjs": "esbuild ./node_modules/dgrid/*.js ./node_modules/dgrid/**/*.js ./node_modules/dgrid/**/**/*.js  --platform=node --bundle --minify --sourcemap --external:*.js --format=cjs --outdir=./dgrid",
    "dgrid:build": "npm run _dgrid:del && npm run _dgrid:copycss && npm run _dgrid:copyjs",
    "_dojo:del": "rimraf dojo/dojo",
    "_dojo:copycss": "esbuild ./node_modules/dojo/resources/*.css --bundle --minify --sourcemap --external:*.css --loader:.png=copy --loader:.gif=copy --outdir=./dojo/dojo/resources",
    "_dojo:copyjs": "esbuild ./node_modules/dojo/*.js ./node_modules/dojo/**/*.js ./node_modules/dojo/**/**/*.js ./node_modules/dojo/**/**/**/*.js --platform=node --bundle --minify --sourcemap --external:*.js --format=cjs --outdir=./dojo/dojo",
    "dojo:build": "npm run _dojo:del && npm run _dojo:copycss && npm run _dojo:copyjs",
    "_dijit:del": "rimraf dojo/dijit node_modules/dijit/themes/claro/compile.js",
    "_dijit:copycss": "esbuild ./node_modules/dijit/themes/*.css ./node_modules/dijit/themes/**/*.css ./node_modules/dijit/themes/**/**/*.css --bundle --minify --sourcemap --external:*.css --loader:.png=copy --loader:.gif=copy --outdir=./dojo/dijit/themes && esbuild ./node_modules/dijit/icons/*.css --bundle --minify --sourcemap --external:*.css --loader:.png=copy --loader:.gif=copy --outdir=./dojo/dijit/icons",
    "_dijit:copyjs": "esbuild ./node_modules/dijit/*.js ./node_modules/dijit/**/*.js ./node_modules/dijit/**/**/*.js ./node_modules/dijit/**/**/**/*.js --platform=node --bundle --minify --sourcemap --external:*.js --format=cjs --outdir=./dojo/dijit",
    "_dijit:copyhtml": "esbuild ./node_modules/dijit/templates/*.html ./node_modules/dijit/layout/templates/*.html ./node_modules/dijit/form/templates/*.html --loader:.html=copy --outdir=./dojo/dijit",
    "dijit:build": "npm run _dijit:del && npm run _dijit:copycss && npm run _dijit:copyhtml && npm run _dijit:copyjs",
    "put-selector:build": "esbuild ./node_modules/put-selector/put.js --minify --outdir=./put-selector",
    "_xstyle:del": "rimraf xstyle",
    "_xstyle:copyjs": "esbuild ./node_modules/xstyle/*.js ./node_modules/xstyle/**/*.js --outdir=./xstyle",
    "xstyle:build": "npm run _xstyle:del && npm run _xstyle:copyjs",
    "build": "npm run dgrid:build && npm run dojo:build && npm run dijit:build && npm run put-selector:build && npm run xstyle:build && npm audit fix"
  }
}
